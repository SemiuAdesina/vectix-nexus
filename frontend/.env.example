# Backend API URL
# Local dev: http://localhost:3002
# VPS/production: leave empty (Next.js rewrites proxy /api/* to backend)
NEXT_PUBLIC_BACKEND_URL=http://localhost:3002

# Server-side only: backend URL for Next.js rewrites (not exposed to browser)
# Set on VPS to http://localhost:3002 so the Next.js server proxies internally
# BACKEND_INTERNAL_URL=http://localhost:3002

# Clerk Configuration (required)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key

# Stripe (required for billing/checkout; use pk_live_* in production)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Clerk Sign In/Up URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
